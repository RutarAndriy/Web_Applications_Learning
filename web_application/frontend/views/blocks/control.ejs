<!-- Блок керування -->
<div class="container-fluid px-0">
   <div class="row mt-3 mx-1 gy-2">

      <!-- Інформаційний текст -->
      <div class="col-12 col-lg-auto">
         <div class="fs-1 lh-1"><%= title %></div>
         <div class="fs-4 lh-1">Загальна кількісь:</div>
      </div>

      <!-- Елементи керування таблицею -->
      <div class="col-12 col-lg align-self-center bg-dangerd">
         <form>
            <div class="row g-2 justify-content-end">

               <!-- Поле пошуку -->
               <div class="col-12 col-sm col-lg-auto">
                  <input class="form-control fs-5 bg-dark text-light border-primary" type="text" placeholder="Пошук">
               </div>

               <!-- Кнопка "додати нову лікарню" -->
               <div class="col-12 col-sm-auto">
                  <span class="btn btn-outline-primary fs-5 w-100"><%= add_button %></span>
               </div>

            </div>             
         </form>
      </div>
   </div>
</div>

<div class="border-bottom border-secondary my-3"></div>